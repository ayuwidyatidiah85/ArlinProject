<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_Akun">

    <View
        android:id="@+id/view_akun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        android:padding="20dp"/>


    <TextView
        android:id="@+id/textview_namauser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Budi Setiawan"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/view_akun"
        app:layout_constraintEnd_toEndOf="@+id/view_akun"
        app:layout_constraintStart_toStartOf="@+id/view_akun"
        app:layout_constraintTop_toTopOf="@+id/view_akun"
        app:layout_constraintVertical_bias="0.280
" />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textinput_namauser"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/view_akun"
        app:layout_constraintEnd_toEndOf="@+id/view_akun"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/view_akun"
        app:layout_constraintTop_toTopOf="@+id/view_akun"
        app:layout_constraintVertical_bias="0.403">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nama Pengguna"
            android:inputType="text" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textinput_password"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/view_akun"
        app:layout_constraintEnd_toEndOf="@+id/view_akun"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/view_akun"
        app:layout_constraintTop_toTopOf="@+id/view_akun"
        app:layout_constraintVertical_bias="0.499">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:inputType="text" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Lokasi"
        app:layout_constraintBottom_toBottomOf="@+id/view_akun"
        app:layout_constraintEnd_toEndOf="@+id/view_akun"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/view_akun"
        app:layout_constraintTop_toTopOf="@+id/view_akun"
        app:layout_constraintVertical_bias="0.595">

        <AutoCompleteTextView
            android:id="@+id/auto_lokasi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/view_akun"
        app:layout_constraintEnd_toEndOf="@+id/view_akun"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/view_akun"
        app:layout_constraintTop_toTopOf="@+id/view_akun"
        app:layout_constraintVertical_bias="0.696">

        <AutoCompleteTextView
            android:id="@+id/auto_golongan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Golongan Daya Listrik"
            android:inputType="none" />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btn_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/blue"
        android:text="Update Profile"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/view_akun"
        app:layout_constraintEnd_toEndOf="@+id/view_akun"
        app:layout_constraintHorizontal_bias="0.518"
        app:layout_constraintStart_toStartOf="@+id/view_akun"
        app:layout_constraintTop_toTopOf="@+id/view_akun"
        app:layout_constraintVertical_bias="0.855" />

    <TextView
        android:id="@+id/textview_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="budi"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/view_akun"
        app:layout_constraintEnd_toEndOf="@+id/view_akun"
        app:layout_constraintStart_toStartOf="@+id/view_akun"
        app:layout_constraintTop_toTopOf="@+id/view_akun"
        app:layout_constraintVertical_bias="0.330" />

    <ImageView
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_baseline_arrow_back_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/view_akun"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="@+id/view_akun"
        app:layout_constraintTop_toTopOf="@+id/view_akun"
        app:layout_constraintVertical_bias="0.03" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:layout_constraintBottom_toBottomOf="@+id/view_akun"
        app:layout_constraintEnd_toEndOf="@+id/view_akun"
        app:layout_constraintStart_toStartOf="@+id/view_akun"
        app:layout_constraintTop_toTopOf="@+id/view_akun"
        app:layout_constraintVertical_bias="0.130"
        app:srcCompat="@drawable/ic_account" />

    <ImageView
        android:id="@+id/btn_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/view_akun"
        app:layout_constraintEnd_toEndOf="@+id/view_akun"
        app:layout_constraintHorizontal_bias="0.886"
        app:layout_constraintStart_toStartOf="@+id/view_akun"
        app:layout_constraintTop_toTopOf="@+id/view_akun"
        app:layout_constraintVertical_bias="0.079"
        app:srcCompat="@drawable/ic_logout" />

</androidx.constraintlayout.widget.ConstraintLayout>